<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="20"/>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="60">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="8dp"
          android:text="@string/cv_label"
          android:textSize="@dimen/label_text_size"/>

        <ScrollView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginBottom="8dp"
          android:layout_weight="1">

            <RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

                <EditText
                  android:id="@+id/name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="8dp"
                  android:inputType="textCapWords"
                  android:maxLines="1"
                  android:imeOptions="actionNext"
                  android:hint="@string/hint_name"/>

                <TextView
                  android:id="@+id/birth_date_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/name"
                  android:layout_marginBottom="4dp"
                  android:text="@string/birth_date"
                  android:textSize="@dimen/label_text_size"
                  android:textStyle="bold"/>

                <Button
                  android:id="@+id/set_birth_date_button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/birth_date_label"
                  android:layout_toRightOf="@+id/birth_date"
                  android:layout_marginLeft="8dp"
                  android:layout_marginBottom="8dp"
                  android:text="@string/select"/>

                <TextView
                  android:id="@id/birth_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="8dp"
                  android:layout_alignBaseline="@id/set_birth_date_button"
                  android:text="@string/date_mask"
                  android:textSize="@dimen/label_text_size"
                  android:textStyle="bold"/>

                <Spinner
                  android:id="@+id/sex_spinner"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/set_birth_date_button"
                  android:layout_toRightOf="@id/birth_date"
                  android:layout_marginLeft="8dp"
                  android:layout_marginBottom="8dp"
                  android:entries="@array/sex_array"
                  android:prompt="@string/hint_sex"/>

                <TextView
                  android:id="@+id/sex_label"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@id/sex_spinner"
                  android:text="@string/sex"
                  android:textSize="@dimen/label_text_size"
                  android:textStyle="bold"/>

                <EditText
                  android:id="@+id/office"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/sex_spinner"
                  android:layout_marginBottom="8dp"
                  android:inputType="textCapSentences"
                  android:maxLines="1"
                  android:imeOptions="actionNext"
                  android:hint="@string/hint_office"/>

                <EditText
                  android:id="@+id/salary"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/office"
                  android:layout_marginBottom="8dp"
                  android:inputType="number"
                  android:maxLines="1"
                  android:maxLength="9"
                  android:imeOptions="actionNext"
                  android:hint="@string/hint_salary"/>

                <EditText
                  android:id="@+id/phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/salary"
                  android:layout_marginBottom="8dp"
                  android:digits="+1234567890"
                  android:inputType="phone"
                  android:maxLines="1"
                  android:imeOptions="actionNext"
                  android:hint="@string/hint_phone"/>

                <EditText
                  android:id="@+id/email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/phone"
                  android:inputType="textEmailAddress"
                  android:maxLines="1"
                  android:hint="@string/hint_email"/>
            </RelativeLayout>
        </ScrollView>

        <Button
          android:id="@+id/send_cv_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginBottom="4dp"
          android:text="@string/send_cv_label"
          android:textSize="@dimen/label_text_size"
          android:onClick="sendCv"/>

    </LinearLayout>

    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="20"/>
</LinearLayout>