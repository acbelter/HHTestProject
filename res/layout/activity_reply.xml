<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

    <TextView
      android:id="@+id/reply_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/reply"
      android:layout_marginTop="4dp"
      android:text="@string/reply_label"
      android:textSize="@dimen/label_text_size"
      android:textStyle="bold"/>

    <EditText
      android:id="@id/reply"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/send_reply_button"
      android:layout_marginBottom="8dp"
      android:inputType="textMultiLine|textCapSentences"
      android:gravity="top"
      android:lines="5"
      android:hint="@string/hint_reply"/>

    <Button
      android:id="@id/send_reply_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="4dp"
      android:layout_centerHorizontal="true"
      android:text="@string/send_reply_label"
      android:textSize="@dimen/label_text_size"
      android:onClick="sendReply"/>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/reply_label"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:layout_alignParentTop="true"
      android:scrollbarStyle="insideInset">

        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

            <TextView
              android:id="@+id/name_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/initials"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/name_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/birth_date_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/birth_date"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/birth_date_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/sex_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/sex"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/sex_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/office_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/office"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/office_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/salary_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/salary"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/salary_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/phone_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/phone"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/phone_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>

            <TextView
              android:id="@+id/email_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/email"
              android:textSize="@dimen/label_text_size"
              android:textStyle="bold"/>

            <TextView
              android:id="@+id/email_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/no_data"
              android:textSize="@dimen/detail_text_size"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>